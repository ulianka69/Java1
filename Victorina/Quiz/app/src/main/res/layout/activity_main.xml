<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3E5FC"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:contentDescription="Портрет" />

    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Чей это портрет?"
        android:textSize="20sp"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/btnOption1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:text="Вариант 1"
        android:textColor="#000000"
        android:textSize="18sp"
        android:background="@drawable/btn_gradient_green_white"
        android:gravity="center"
        android:elevation="4dp" />

    <Button
        android:id="@+id/btnOption2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="Вариант 2"
        android:textColor="#000000"
        android:textSize="18sp"
        android:background="@drawable/btn_gradient_green_white"
        android:gravity="center"
        android:elevation="4dp" />

    <Button
        android:id="@+id/btnOption3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="Вариант 3"
        android:textColor="#000000"
        android:textSize="18sp"
        android:background="@drawable/btn_gradient_green_white"
        android:gravity="center"
        android:elevation="4dp" />

    <Button
        android:id="@+id/btnOption4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="Вариант 4"
        android:textColor="#000000"
        android:textSize="18sp"
        android:background="@drawable/btn_gradient_green_white"
        android:gravity="center"
        android:elevation="4dp" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center" />


    <Button
        android:id="@+id/btnRestart"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="Начать заново"
        android:textColor="#000000"
        android:textSize="18sp"
        android:background="@drawable/btn_gradient_green_white"
        android:gravity="center"
        android:elevation="4dp"
        android:visibility="gone" />

</LinearLayout>